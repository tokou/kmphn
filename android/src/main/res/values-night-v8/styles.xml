<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tenne</item>
        <item name="colorPrimaryDark">@color/tenne</item>
        <item name="android:statusBarColor">@color/nero_12</item>
    </style>

    <style name="AppTheme.Splash" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="runtimeTheme">@style/AppTheme</item>
        <item name="android:colorPrimary">@color/tenne</item>
        <item name="android:colorPrimaryDark">@color/tenne</item>
        <item name="android:actionBarStyle">@style/AppTheme.Splash.ActionBar</item>
        <item name="android:statusBarColor">@color/nero_12</item>
        <item name="android:windowBackground">@color/black_7</item>
    </style>

    <style name="AppTheme.Splash.ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:displayOptions">none</item>
        <item name="android:background">@color/nero_16</item>
    </style>
</resources>
