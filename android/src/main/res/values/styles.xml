<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_light_primary_500</item>
        <item name="colorPrimaryDark">@color/material_light_primary_700</item>
    </style>

    <style name="AppTheme.Splash" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="runtimeTheme">@style/AppTheme</item>
        <item name="android:colorPrimary">@color/material_light_primary_500</item>
        <item name="android:colorPrimaryDark">@color/material_light_primary_700</item>
        <item name="android:actionBarStyle">@style/AppTheme.Splash.ActionBar</item>
    </style>

    <style name="AppTheme.Splash.ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:displayOptions">none</item>
    </style>
</resources>
