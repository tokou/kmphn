import kotlin.collections.List;

CREATE TABLE IF NOT EXISTS item(
id INTEGER NOT NULL PRIMARY KEY,
user TEXT,
created TEXT NOT NULL,
content TEXT,
title TEXT,
kids TEXT as List<Long> NOT NULL DEFAULT "[]",
link TEXT,
type TEXT NOT NULL
);

insert:
INSERT OR REPLACE INTO item(id, user, created, content, title, link, type) VALUES ?;

selectAll:
SELECT * FROM item;

deleteAll:
DELETE FROM item;

selectById:
SELECT * FROM item WHERE id = ?;
